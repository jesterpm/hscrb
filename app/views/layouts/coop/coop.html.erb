<div id="wrapper" class="container">
  <header>
    <h1>Living Hope Co-op</h1>
  </header>

  <div id="body" class="row">
    <nav id="coopnav" class="col-md-2 nomobile">
      <ul class="nav nav-pills nav-stacked">
        <li><a href="/<%= @coop.slug %>"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home</a></li>
        <%= render "layouts/coop/nav" %>
      </ul>
    </nav>

    <div id="content" class="col-md-10">
      <div id="errorbox"><%= content_for(:error) ? yield(:error) : "" %></div>

      <%= yield %>
    </div>
  </div>

  <footer>
    <small>Copyright &copy; 2015 Jesse Morgan</p>
  </footer>
</div>

<% parent_layout "application" %>
